<% include ../partials/header %>

<div class="container">
    <header class="jumbotron my-3">
        <div class="container">
            <h1>Welcome to YelpCamp</h1>
            <p>View our hand-picked campgrounds from all over the world</p>
            <p>
                <a href="campgrounds/new" class="btn btn-primary btn-lg">Add New Campground</a>
            </p>
        </div>
    </header>
    
    <div class="row">
        <% campgrounds.forEach(function(cg){ %>
        <div class="col-md-3 col-sm-6">
            <div class="card my-3">
                <img class="card-img-top" src="<%=cg.image%>" alt="Card image cap">
                <div class="card-body">
                    <p class="card-text text-center"><%=cg.name%></p>
                </div>
                <p class="text-center">
                    <a href="/campgrounds/<%=cg._id%>" class="btn btn-primary">More Info</a>
                </p>
            </div>
        </div>
    <% }); %>
    </div>
        <% include ../partials/footer %>
    </div>