<% include ../partials/header %>

<div class="container px-5 pt-5">
<h1 class="text-center mb-3">Edit <%= campground.name %></h1>
  <div style="width: 50%" class="mx-auto">
  <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
  <div class="form-group">
    <label for="inputName">Name</label>
    <input name="campground[name]" type="text" class="form-control" id="inputName" value="<%=campground.name%>">
  </div>
  <div class="form-group">
    <label for="inputUrl">Image URL</label>
    <input name="campground[image]" type="text" class="form-control" id="inputUrl" value="<%= campground.image %>">
  </div>
  <div class="form-group">
    <label for="desc">Description</label>
    <input name="campground[description]" type="text" class="form-control" id="desc" value="<%=campground.description%>">
  </div>
  <div class="form-group">
    <label for="price">Price</label>
    <input name="campground[price]" type="text" class="form-control" id="price" value="<%=campground.price%>">
  </div>
  
  <button type="submit" class="btn btn-primary btn-block mb-2">Submit</button>
  <a href="/campgrounds">Go Back</a>
  </div>
</form>
</div>

<% include ../partials/footer %>